    "db:migrate:all": "dotenv -e .env -- bash -lc 'set -e; for f in migrations/*.sql; do echo Running $f; psql \"$POSTGRES_URL\" -f \"$f\"; done'",
    "db:seed:notifications": "dotenv -e .env -- psql \"$POSTGRES_URL\" -v ON_ERROR_STOP=1 -f scripts/seed_notifications.sql"
  },
