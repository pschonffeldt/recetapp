  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "db:psql": "dotenv -e .env -- bash -lc 'psql \"$POSTGRES_URL\"'",
